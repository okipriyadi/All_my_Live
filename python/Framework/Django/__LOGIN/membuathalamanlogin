1. gunakan wraper @login_required di setiap fungsi view
2. untuk menentukan LOGIN_URL tempatkan variabel "LOGIN_URL" di setting ex: LOGIN_URL = "/accounts/login"
3. 



VIEW contoh

def user_login(request):
    next = request.GET.get('next', '')
    
    if request.method == 'POST':            
        form = LoginForm(request.POST)
        if form.is_valid():
            login(request, form.get_user())
            if not next in ('','/'):
                return HttpResponseRedirect(next)
             
            return HttpResponseRedirect(reverse('init_login'))
    else:
        form = LoginForm()
     
    context = dict(
            form=form
            )
    
    return render_to_response('login.html', context, 
        context_instance=RequestContext(request)) 
        
 